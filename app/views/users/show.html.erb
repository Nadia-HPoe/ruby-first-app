
<div class="user-card">
    <h1 class="user-title"><%= @user.name %></h1>
    <div class="user-img-container">
        <%= image_tag user_avatar(@user), alt: 'profile pic', class: 'image'%>
    </div>
    <h2 class="user-subtitle">@<%= @user.username %></h2>
    
    <a href="#" class="button" id="ask-button">Ask question</a>
</div>
<div class="user-question-form">
    <div class="form">
        <%= form_for @new_question do |f| %>
            <%= f.hidden_field :user_id %>
            <div class="form-field">
                <%= f.label "Ask @#{@user.username} about anything!", class: 'form-label'%>
                <%= f.text_area :text, class: 'form-textarea' %>
            </div>

            <div class="form-action"> 
                <%= submit_tag "Ask question", class: 'button'%>
            </div>
        <% end %>
    </div>
</div>
<div>
        <% @questions.each do |question|%>
            <%= render partial: 'questions/question', object: question %>
        <% end %>
</div>