<div class="user-container">
    <div  class="user-card">
        <h2 class="title">@<%= @user.username %></h2>
        <div class="user-card_bio">
            <div class="user-img-container">
                <%= image_tag user_avatar(@user), alt: 'profile pic', class: "image" %>
            </div>
            <h3 class="user-subtitle">Name: <%= @user.name %></h3>
            <h3 class="user-subtitle">Bio: <%= user_bio(@user)%></h3>
            <div class="user-edit">
                <%= link_to "Edit profile", edit_user_path(@user), class: "user-edit-link" if current_user == @user %>
            </div>
            <a href="#" class="button button-mobile" id="ask-button">Ask question</a>
        </div>
    </div>
    <div class="user-question-form" id="ask-form">
        <div class="form">
            <%= form_for @new_question do |f| %>
                <%= f.hidden_field :user_id%>
                    <div class="form-field">
                        <%= f.label "Ask @#{@user.username} about anything!", class: "form-label"%>
                        <%= f.text_area :text, class: "form-textarea" %>
                    </div>
                <div class="form-action"> 
                    <%= submit_tag "Ask question", class: "button" %>
                </div>
            <% end %>
            <div class="question-block">
                <h2 class="title">Questions</h2>
                <div class="question-wrapper">
                    <% @questions.each do |question| %>
                        <%= render partial: 'questions/question', object: question %>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>


            
            