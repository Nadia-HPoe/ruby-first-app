<div class="new-form">
    <h1 class="new-title">Edit your profile</h1>
  <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div class="form-errors">
          <ul>
            <% for message in @user.errors.full_messages %>
              <li class="form-errors-message"><%= message %></li>
            <% end %> 
          </ul>
        </div>
      <% end %>  
    <div class="new-form-field">
      <%= f.label :username, "Username", class: "new-form-label" %>
      <%= f.text_field :username, class: "form-input" %>
    </div>

    <div class="new-form-field">
      <%= f.label :name, "Name", class: "new-form-label" %>
      <%= f.text_field :name, class: "form-input" %>
    </div>

    <div class="new-form-field">
      <%= f.label :bio, "Write about yourself", class: "new-form-label" %>
      <%= f.text_field :bio, class: "form-input" %>
    </div>

        <div class="new-form-field">
      <%= f.label :avatar_url, "Your photo (URL)", class: "new-form-label" %>
      <%= f.text_field :avatar_url, class: "form-input" %>
    </div>

    <h5>If you do not want to change your password, leave these fields blank!</h5>

    <div class="new-form-field">
      <%= f.label :password, "Password", class: "new-form-label" %>
      <%= f.password_field :password, class: "form-input" %>
    </div>

    <div class="new-form-field">
      <%= f.label :password_confirmation, "Password Confirmation", class: "new-form-label" %>
      <%= f.password_field :password_confirmation, class: "form-input" %>
    </div>

    <div class="new-form-action">
      <%= f.submit "Save the changes", class: "button" %>
    </div>
  <% end %>
</div>