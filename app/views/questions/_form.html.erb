<%= form_for(@question) do |f| %>
  <% if @question.errors.any? %>
    <div class="form-errors">
      <ul>
        <% @question.errors.full_messages.each do |message| %>
          <li class="form-errors-message"><%= message %></li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :user_id %>  
  <div class="new-form-field">
    <%= f.label :text, 'Question', class: "form-label" %>
    <%= f.text_area :text, class: "form-textarea" %>
  </div>
  <% if current_user.present? && current_user == @question.user %>
  <div class="new-form-field">
    <%= f.label :answer, 'Answer', class: "form-label" %>
    <%= f.text_area :answer, class: "form-textarea" %>
  </div>
  <% end %>
  <div class="new-form-action">
    <%= f.submit "Save", class: "button" %>
    or 
    <%= link_to "return", user_path(@question.user) %>
  </div>
<% end %>