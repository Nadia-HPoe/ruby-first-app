<% question ||= nil %>
<% action_icon = question.answer.blank? ? "reply" : "pencil" %>

<div class="question">
    <div class="question-content">
        <div class="question-text">
            <%= question.text %>
        </div>
        <% if question.answer.present? %>
            <div class="question-answer">
                <%= question.answer if question.answer.present? %>
            </div>
        <%end%>
        <div class="question-bottom">
            <div class="question-date">
            <%= l(question.created_at, format: :short) %>
            </div>
            <% if question.user == current_user%>
            <div class="question-actions">
                <%= link_to fa_icon(action_icon), edit_question_path(question) %>
                <%= link_to fa_icon("trash-o"), question_path(question), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this question?" } %>
            </div>
            <% end %>
        </div>
    </div>
</div>